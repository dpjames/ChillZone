               <input type="checkbox" onchange="toggleLights('reading')">
               <div class="slider round"></div>
            </label>
         </div>
         <div id='content2' class='buttonBox'>
            <br>
            <input type="submit" class="myButton" value="No Chill" onClick="toggleLights('off')"><br>
            <br>
            <input type="submit" class="myButton" value="Chill" onClick="toggleLights('chill')"><br>
            <br>
            <input type="submit" class="myButton" value="Study" onClick="toggleLights('study')"><br>
            <br>
            <input type="submit" class="myButton" value="Lights" onClick="toggleLights('lights')"><br>
